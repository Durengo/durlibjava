<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<!-- Version 8 MySQL hiberante-cfg.xml example for Hibernate 5 -->
<hibernate-configuration>
    <session-factory>
        <property name="connection.driver_class">com.mysql.cj.jdbc.Driver</property>
        <!-- property name="connection.driver_class">com.mysql.jdbc.Driver</property -->
        <property name="connection.url">jdbc:mysql://localhost/new_schema</property>
        <property name="dialect">org.hibernate.dialect.MySQL8Dialect</property>
        <property name="connection.username">root</property>
        <property name="connection.password">root</property>
        <property name="connection.pool_size">3</property>
        <!--property name="dialect">org.hibernate.dialect.MySQLDialect</property-->
        <property name="current_session_context_class">thread</property>
        <property name="show_sql">true</property>
        <property name="format_sql">true</property>
        <property name="hbm2ddl.auto">update</property>
        <mapping class="airport.io.github.durengo.durlib.Airport" />
        <mapping class="airport.io.github.durengo.durlib.Airspace" />
        <mapping class="airport.io.github.durengo.durlib.Runway" />
        <mapping class="airport.io.github.durengo.durlib.Telemetry" />
        <mapping class="airport.io.github.durengo.durlib.TrafficControlTower" />
        <mapping class="airplane.io.github.durengo.durlib.Airplane" />
        <mapping class="people.io.github.durengo.durlib.Person" />
        <mapping class="people.io.github.durengo.durlib.ControlTowerOperator" />
        <mapping class="people.io.github.durengo.durlib.CrewMember" />
        <mapping class="people.io.github.durengo.durlib.Luggage" />
        <mapping class="people.io.github.durengo.durlib.Passenger" />
        <mapping class="people.io.github.durengo.durlib.Ticket" />
    </session-factory>
</hibernate-configuration>